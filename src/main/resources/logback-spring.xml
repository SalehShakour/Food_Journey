    <logger name="com.foodjou.fjapp.controllers.FoodController" level="INFO">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="com.foodjou.fjapp.controllers.FoodController" level="INFO">
        <appender-ref ref="RABBITMQ"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
